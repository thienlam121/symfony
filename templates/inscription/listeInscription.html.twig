{% block body %}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
{% for errorMessage in app.flashes('error') %}
    <div class="alert alert-danger" role="alert">
        {{ errorMessage }}
    </div>
{% endfor %}
{% for errorMessage in app.flashes('error2') %}
    <div class="alert alert-success" role="alert">
        {{ errorMessage }}
    </div>
{% endfor %}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <a class="navbar-brand">
            <img src="https://static.vecteezy.com/ti/vecteur-libre/p3/11405698-creation-de-logo-de-formation-en-genie-industriel-modele-de-logo-d-engrenage-etudiant-vectoriel.jpg" alt="Logo" height="30" class="d-inline-block align-text-top">
            ADMIN Tech formation
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="{{path('app_aff_inscription')}}">Les inscriptions</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{path('app_all_formation')}}">Les formations</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{path('app_aff_produit')}}">Les produits</a>
                </li>
            </ul>

            <a class="btn btn-outline-danger" href="{{ path('app_login') }}">Déconnexion</a>
            
        </div>
    </div>
</nav>

<div class="container">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="mt-5 mb-4">Liste des inscriptions</h1>
    </div>
    <div class="row">
        {% for uneInscription in inscription %}
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Inscription : {{ uneInscription.id }}</h5>
                    <p class="card-text">Nom : {{ uneInscription.employe.nom }}</p>
                    <p class="card-text">Prénom : {{ uneInscription.employe.prenom }}</p>
                    <p class="card-text">Statut : {{ uneInscription.statut }}</p>
                    <a href="{{path('app_validation_inscription', {'idInscription': uneInscription.id})}}" class="btn btn-success">Valider l'inscription</a>
                    <a href="{{path('app_refus_inscription', {'idInscription': uneInscription.id})}}" class="btn btn-danger">Refuser l'inscription</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>

{% endblock %}
